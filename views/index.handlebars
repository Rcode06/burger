<main>
  <div class="container">
    <div class="row">
      <div class="col s6">
      <h4> devour it</h4>
        {{#each burgers}}
          {{#unless this.devoured}}
            <div>
              <form action="/burgers/{{this.id}}?_method=PUT" method="POST">
                <button type="submit" class='yesBurger'> {{this.burger_name}}</button>
              </form>
            </div>
          {{/unless}}
        {{/each}}
      </div>

      <div class="col s6">
      <h4>devoured</h4>
        {{#each burgers}}
          {{#if this.devoured}}
            <div class='noBurgers'>
              <div>
                {{this.burger_name}}
              </div>
            </div>
          {{/if}}
        {{/each}}
      </div>
    </div>
  </div>
</main>




